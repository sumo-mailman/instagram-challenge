<h1>New post</h1>

<br>

<div class='enter-post'>    
  <%= bootstrap_form_for(@post) do |form| %>
    <%= form.text_field :message, placeholder: "What's on your mind?" %>
    <%= form.file_field :image  %>
    <%= form.submit "Submit" %>
  <% end %>
</div>

<div>
  <%= link_to "Back to posts", posts_path %>
</div>
